{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["app/common/*"],
      "@assets/*": ["app/assets/*"],
      "@modules/*": ["app/modules/*"],
      "@routes/*": ["app/routes/*"],
      "@themes/*": ["app/theme/*"]
    }
  }
}
